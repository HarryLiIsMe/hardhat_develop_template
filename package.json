{
  "name": "hardhat_develop_template",
  "version": "1.0.0",
  "scripts": {
    "compile": "pnpx hardhat compile",
    "types": "pnpx hardhat typechain",
    "build": "run-s compile types",
    "coverage": "pnpx hardhat coverage --solcoverjs .solcover.js --temp build/artifacts --testfiles 'test/**/*.ts'",
    "chain": "pnpx hardhat node",
    "clean": "rimraf build coverage coverage.json",
    "fmt:ts": "pnpx prettier --config .prettierrc.json 'scripts/*.ts' 'scripts/**/*.ts' 'test/*.ts' 'test/**/*.ts' 'tasks/*.ts' 'tasks/**/*.ts' 'hardhat.config.ts' '.eslintrc.js'",
    "fmt:sol": "pnpx prettier --config .prettierrc.json 'contracts/*.sol' 'contracts/**/*.sol'",
    "fmt:tsfix": "pnpx prettier --config .prettierrc.json 'scripts/*.ts' 'scripts/**/*.ts' 'test/*.ts' 'test/**/*.ts' 'tasks/*.ts' 'tasks/**/*.ts' 'hardhat.config.ts' '.eslintrc.js' --write",
    "fmt:solfix": "pnpx prettier --config .prettierrc.json 'contracts/*.sol' 'contracts/**/*.sol' --write",
    "fmt": "run-s fmt:ts fmt:sol",
    "fmt:fix": "run-s fmt:tsfix fmt:solfix",
    "lint:ts": "pnpx eslint -c .eslintrc.js",
    "lint:tsfix": "pnpx eslint -c .eslintrc.js --fix",
    "lint:sol": "pnpx solhint -c .solhint.json 'contracts/*.sol' 'contracts/**/*.sol'",
    "lint:solfix": "pnpx solhint -c .solhint.json 'contracts/*.sol' 'contracts/**/*.sol' --fix --noPrompt",
    "lint": "run-s lint:ts lint:sol",
    "lint:fix": "run-s lint:tsfix lint:solfix",
    "hardhat:dev": "hardhat --network local",
    "hardhat:testnet": "hardhat --network testnet",
    "hardhat:mainet": "hardhat --network mainnet",
    "test": "yarn hardhat test",
    "test:dev": "yarn hardhat:dev test",
    "test:testnet": "yarn hardhat:testnet test",
    "test:mainet": "yarn hardhat:testnet test",
    "dep:dev": "yarn hardhat:dev run scripts/deploy.ts",
    "dep:testnet": "yarn hardhat:testnet run scripts/deploy.ts",
    "dep:mainet": "yarn hardhat:mainet run scripts/deploy.ts",
    "task1:dev": "yarn hardhat:dev task1",
    "task1:testnet": "yarn hardhat:testnet task1",
    "task1:mainet": "yarn hardhat:mainet task1",
    "task2:dev": "yarn hardhat:dev task2",
    "task2:testnet": "yarn hardhat:testnet task2",
    "task2:mainet": "yarn hardhat:mainet task2",
    "verify:testnet": "yarn hardhat:testnet verify",
    "verify:mainet": "yarn hardhat:mainnet verify"
  },
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-ganache": "^2.0.1",
    "@openzeppelin/contracts": "^5.1.0",
    "@openzeppelin/contracts-upgradeable": "^5.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.8.0",
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/debug": "^4.1.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.10",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "chai": "^4.5.0",
    "cpr": "^3.0.1",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "debug": "^4.4.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.17",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-diamond-abi": "^3.0.1",
    "hardhat-etherscan": "^1.0.1",
    "hardhat-gas-reporter": "^1.0.10",
    "make-dir-cli": "^3.1.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "prettier-plugin-solidity": "^1.4.1",
    "rimraf": "^5.0.10",
    "run-s": "^0.0.0",
    "solhint": "^4.5.4",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.14",
    "ts-dotenv": "^0.9.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.7.2",
    "wait-on": "^7.2.0",
    "zeppelin-solidity": "^1.12.0"
  }
}
